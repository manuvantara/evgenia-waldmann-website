<div class="relative flex h-full w-full overflow-hidden pb-8 pt-16">
  <div
    class="relative flex flex-row overflow-hidden [--gap:4rem] [gap:var(--gap)]"
  >
    <div class="flex shrink-0 animate-marquee [gap:var(--gap)]">
      <Image src={c1} alt="Certificate" height={200} loading="eager" />
      <Image src={c2} alt="Certificate" height={200} loading="eager" />
      <Image src={c3} alt="Certificate" height={200} loading="eager" />
      <Image src={c4} alt="Certificate" height={200} loading="eager" />
      <Image src={c5} alt="Certificate" height={200} loading="eager" />
      <Image src={c6} alt="Certificate" height={200} loading="eager" />
      <Image src={c7} alt="Certificate" height={200} loading="eager" />
    </div>
    <div class="flex shrink-0 animate-marquee [gap:var(--gap)]">
      <Image src={c1} alt="Certificate" height={200} loading="eager" />
      <Image src={c2} alt="Certificate" height={200} loading="eager" />
      <Image src={c3} alt="Certificate" height={200} loading="eager" />
      <Image src={c4} alt="Certificate" height={200} loading="eager" />
      <Image src={c5} alt="Certificate" height={200} loading="eager" />
      <Image src={c6} alt="Certificate" height={200} loading="eager" />
      <Image src={c7} alt="Certificate" height={200} loading="eager" />
    </div>
  </div>
</div>
